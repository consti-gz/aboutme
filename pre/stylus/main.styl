@import url('http://fonts.googleapis.com/css?family=Raleway:400,100,200,300,500,600,700,800,900')
@import url('http://code.ionicframework.com/ionicons/1.5.2/css/ionicons.min.css')

$_PrimaryColor = #0c8ac4
$_SecondaryColor = #2a2b39
$_HeaderColor = #0c8ac4
// lighter: #369cda
// dark: #0c8ac4
// darker: #2a3f5c

$_BasePathImages = '../../assets/img/'

bg-image(image)
  background: url($_BasePathImages + image)

::-moz-selection
  color #fff
  background $_SecondaryColor

::selection
  color #fff
  background $_SecondaryColor

::-moz-selection
  color #fff
  background $_SecondaryColor

body, html
  font-family 'Raleway', sans-serif
  bg-image: 'bg.jpg'
  background-size cover
  margin 0
  padding 0
  width 100%
  height 100%
  overflow hidden
  z-index 9

.bgtint
  position absolute
  height 100%
  width 100%
  background rgba(42, 43, 57, 0.7)

p
  padding 0
  margin 0
  display inline-block

a
  color $_SecondaryColor
  text-decoration none
  -webkit-transition all 0.2s ease-in-out
  transition all 0.2s ease-in-out
  &:hover
    color $_PrimaryColor

.bussinesscard
  height 360px
  width 428px
  overflow hidden
  box-shadow 0px 0px 43px -10px black
  position absolute
  left 50%
  top 50%
  -ms-transform translate(-50%, -50%)
  -webkit-transform translate(-50%, -50%)
  transform translate(-50%, -50%)
  .flip
    -webkit-transition all 0.5s ease
    transition all 0.5s ease
  .front
    z-index 11
    width 100%
    position absolute
    height 100%
    background #fff
    box-shadow 0px 0px 33px -1px rgba(0, 0, 0, 0.45)
    -ms-transform scale(1, 1)
    -webkit-transform scale(1, 1)
    transform scale(1, 1)
    -webkit-transition all 0.6s ease
    transition all 0.6s ease
    .top
      height 56%
      background $_HeaderColor
      &:after
        position absolute
        content ''
        pointer-events none
        left 50%
        width 2em
        height 2em
        -ms-transform translateX(-50%) rotate(45deg)
        -webkit-transform translateX(-50%) rotate(45deg)
        transform translateX(-50%) rotate(45deg)
        bottom 9em
        z-index 10
        background inherit
      .logo
        display inline-block
        color #fff
        z-index 11
        position relative
        pointer-events none
        -ms-transform translateX(-50%)
        -webkit-transform translateX(-50%)
        transform translateX(-50%)
        left 50%
        margin-top .2em
        font-size 4em
        img
          height 2.8em
          border-radius: 150px;
          box-shadow: 0 0 8px rgba(0, 0, 0, .8);
        .fat
          font-weight 800
        .skinny
          font-weight 100
    .nametroduction
      margin-top 2.4em
      -ms-transform translateY(0)
      -webkit-transform translateY(0)
      transform translateY(0)
      z-index 8
    .name
      color $_SecondaryColor
      font-weight 400
      font-size 3.2em
      text-align center
      position relative
      margin-bottom .35em
      &:after
        content ''
        position absolute
        top 1.3em
        width 20%
        left 40%
        right 40%
        height 1px
        background $_SecondaryColor
    .introduction
      text-align center
      color $_SecondaryColor
      font-family: 'Raleway', sans-serif;
      //font-family 'Old Standard TT', serif
      //font-style italic
    .contact
      color $_SecondaryColor
      margin-left 1.7em
      font-weight 300
      font-size 1.6em
      -ms-transform translateY(400%)
      -webkit-transform translateY(400%)
      transform translateY(400%)
      span
        color #2D3244
        font-size 1.7em
        width 1.3em
        display inline-block
      p
        position relative
        bottom .24em
  .back
    width 100%
    height 100%
    background #fff
    -webkit-backface-visibility hidden
    backface-visibility hidden
    position absolute

.tooltip
  position absolute
  left 1em
  bottom 1em
  color #fff
  font-weight 300
  padding .4em
  background $_PrimaryColor

.front .top .logo, .front .top, .front .top:after, .front .nametroduction, .front .contact
  -webkit-transition all 0.7s ease-in-out
  transition all 0.7s ease-in-out

.flip
  &:hover
    .front
      .top
        height 25%
        .logo
          margin-top .28em
          font-size 1.3em
          margin-left .15em
          -ms-transform translateX(0)
          -webkit-transform translateX(0)
          transform translateX(0)
          left 0
          img
            margin-left .2em
            height 88%
            transition: transform .25s ease;
            //transform scale(.25)
        &:after
          width 1.5em
          height 1.5em
          bottom 16.3em
      .nametroduction
        -ms-transform translateY(400%)
        -webkit-transform translateY(400%)
        transform translateY(400%)
      .contact
        -ms-transform translateY(-52%)
        -webkit-transform translateY(-52%)
        transform translateY(-52%)


.info:hover
  span:before
    color $_PrimaryColor
  p
    color $_PrimaryColor

// text scrolling code
.wrapper
  display block
  text-align center
  margin 0 auto

.roles
  height 25px
  vertical-align middle
  overflow hidden
  div
    height 25px
    transition margin-top 1s ease-in-out